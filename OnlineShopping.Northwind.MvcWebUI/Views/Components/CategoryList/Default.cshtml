@model OnlineShopping.Northwind.MvcWebUI.Models.CategoryListViewModel

<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryId == Model.CurrenCategory)
        {
            css += " active";
        }
        
        <a class="@css" href="/Product/index?category=@item.CategoryId">@item.CategoryName</a>
    }
</div>